<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".entranceActivity"
    android:background="@drawable/bg_land_test1"
    android:layout_alignParentBottom="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to FoodVolume!"
        android:id="@+id/welcomePageTextView"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/capturePhotoImageView"
        android:layout_above="@+id/capturePhotoImageView"
        android:layout_alignEnd="@+id/capturePhotoImageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo ^_^"
        android:id="@+id/photoButton"
        android:onClick="getDefaultCameraPreview"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your meal record ^_^"
        android:id="@+id/mealRecordButton"
        android:onClick="checkMealRecord"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/fvCameraPreviewButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use fv camera ^_^"
        android:id="@+id/fvCameraPreviewButton"
        android:onClick="getFvCameraPreview"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/photoButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/capturePhotoImageView"
        android:layout_gravity="top|left"
        android:layout_height="180dp"
        android:layout_width="400dp"
        android:layout_above="@+id/mealRecordButton"
        android:layout_centerHorizontal="true" />






</RelativeLayout>
